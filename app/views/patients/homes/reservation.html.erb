<div class="container">
<div class="row">
<h1 class="title-logo text-center">予約一覧</h1>
	<div class="col-md-2"></div>
	<div class="col-md-8 about__box">
	<% if @reservations %>
		<table class="table">
			<tr class="table__background__reservations">
				<th>予約予定日</th>
				<th>症状の内容</th>
				<th>申込日</th>
			</tr>
			<% @reservations.each do |reservation| %>
			<tr>
				<td><%= reservation.reservation_date %></td>
				<td><%= reservation.exam_content %></td>
				<td><%= reservation.created_at.strftime('%Y/%m/%d') %></td>
			</tr>
			<% end %>
		</table>
	<% end %>
	</div>
	<%= paginate @reservations %>
</div>
</div>
