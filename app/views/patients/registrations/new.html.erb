<div class="container">
  <div class="row">
  <h1 class="title-logo text-center">会員新規登録</h1>
  <div class="col-md-3"></div>
  <div class="form-group col-md-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "patients/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :membership_number, "診察券番号" %><br />
      <%= f.text_field :membership_number, autofocus: true, autocomplete: "membership_number", :placeholder =>"A0000000", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :name, "氏名" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder =>"熊猫太郎", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :name_kana, "氏名（カナ）" %><br />
      <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", :placeholder =>"パンダタロウ", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :birthday, "生年月日" %><br />
      <%= raw sprintf(
            f.date_select(
              :birthday,
               use_month_numbers: true,
               start_year: 1930,
               end_year: (Time.now.year - 1 ),
               default: Date.new(1990, 1, 1),
               date_separator: '%s'),
              '年 ', '月 ') + '日' %>
    </div>

    <div class="field">
      <%= f.label :sex, "性別" %><br />
      <%= f.radio_button :sex, 1, checked: true %>男
      <%= f.radio_button :sex, 2 %>女
    </div>

    <div class="field">
      <%= f.label :phonenumber, "電話番号" %><br />
      <%= f.text_field :phonenumber, autofocus: true, autocomplete: "phonenumber", :placeholder => "0000000", class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "example@gmail.com", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（6文字以上、確認用）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="btn--next__wrapper">
      <%= f.submit "登録完了", class: "btn--next" %>
    </div>
  <% end %>

  <div class="text-center">
      <%= render "patients/shared/links"%>
  </div>

  </div>
  </div>
  <div class="about__box"></div>
</div>
