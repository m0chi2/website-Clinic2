<div class="container wrap__container">
  <div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h2>Admin sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :name, "氏名" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "例）熊猫管理" %>
      </div>
      <div class="field">
        <%= f.label :name_kana, "氏名（カナ）" %><br />
        <%= f.text_field :name_kana, autofocus: true, autocomplete: "例）パンダカンリ" %>
      </div>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :login_id, "ログインID" %><br />
        <%= f.text_field :login_id, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "Btn__submit" %>
      </div>
    <% end %>
  </div>

</div>
</div>