<div class="container wrap__container">
<div class="row">
	<h1 class="col title-logo text-center fadeInUp">気になる記録</h1>
	<div class="col-md-3"></div>
	<div class="col-md-7" data-scroll>
		<div class="Form__position form-group">
		<%= form_for(@post, url: posts_path) do |f| %>
			<div>
				<%= f.label :bothering_start_id, "日時", class: "Form__label-style" %>
				<%= f.select :bothering_start_id, options_from_collection_for_select(BotheringStart.all, :id, :name), prompt: "選択してください", class: "form-control" %>
			</div>
			<div>
				<%= f.label :bothering_genre_id, "分類", class: "Form__label-style" %>
				<%= f.select :bothering_genre_id, options_from_collection_for_select(BotheringGenre.all, :id, :name), prompt: "選択してください", class: "form-control" %>
			</div>
			<div>
				<%= f.label :content, "詳細内容", class: "Form__label-style" %>
			</div>
			<div>
				<%= f.text_area :content, class: "Form__size--area", placeholder: "ここに詳細を書いてください。" %>
			</div>
			<div class="text-center">
				<%= f.submit "記録する", class: "Btn__submit" %>
			</div>

			<% end %>
		</div>
		<div class="row"></div>
	</div>
</div>
</div>