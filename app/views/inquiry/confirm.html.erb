<div class="container wrap__container">
  <div class="row">
  <h1 class="title-logo text-center">お問い合わせ</h1>

  <div class="col-md-2"></div>
  <div class="col-md-8">
  <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
    <table class="Table__placement">
      <tr>
        <th class="Form__label-bg">名前</th>
        <td>
          <%= f.hidden_field :name %>
          <%= @inquiry.name %>
        </td>
      </tr>
      <tr>
        <th class="Form__label-bg">メールアドレス</th>
        <td>
          <%= f.hidden_field :email %>
          <%= @inquiry.email %>
        </td>
      </tr>
      <tr>
        <th class="Form__label-bg">お問い合わせ内容</th>
        <td>
          <%= f.hidden_field :message %>
          <%= simple_format(@inquiry.message) %>
        </td>
      </tr>
    </table>
    <div class="col Box__Btns">
      <%= f.submit '送信', :class => 'Btn__submit' %>
    </div>
  <% end %>
  </div>

  </div>
</div>