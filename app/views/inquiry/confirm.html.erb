<div class="container">
  <div class="row">
  <h1 class="page__title text-center">お問い合わせ</h1>

  <div class="col-md-2"></div>
  <div class="inquiry__confirm__field col-md-8">
  <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
    <table class="inquiry__table">
      <tr>
        <th class="visitor__item">名前</th>
        <td>
          <%= f.hidden_field :name %>
          <%= @inquiry.name %>
        </td>
      </tr>
      <tr>
        <th class="visitor__item">メールアドレス</th>
        <td>
          <%= f.hidden_field :email %>
          <%= @inquiry.email %>
        </td>
      </tr>
      <tr>
        <th class="visitor__item">お問い合わせ内容</th>
        <td>
          <%= f.hidden_field :message %>
          <%= simple_format(@inquiry.message) %>
        </td>
      </tr>
    </table>
    <div class="btn__next__wrapper">
      <%= f.submit '送信', :class => 'btn__next' %>
    </div>
  <% end %>
  </div>

  </div>
</div>