<!DOCTYPE html>
<html>
  <head>
    <title>ぱんだ整形外科クリニック</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital@1&family=M+PLUS+Rounded+1c:wght@300&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/<%= ENV['FONTAWESOME_KIT'] %>.js" crossorigin="anonymous"></script>
  </head>

<div class="navbar__top__border"></div>
  <header>
    <div class="container">
      <div class="row navbar">
      <% if patient_signed_in? %>
          <%= link_to image_tag("toplogo-white.png", class: "toplogo pull-left"), patients_homes_path %>
          <h3 id= "patient__topbar__mark", class="topbar__mark">会員ページ</h3>
      <% elsif admin_signed_in? %>
          <%= link_to image_tag("toplogo-white.png", class: "toplogo pull-left"), admins_path %>
          <h3 id= "admin__topbar__mark", class="topbar__mark">管理者ページ</h3>
            <%= link_to destroy_patient_session_path, method: :delete, id: "logout__topbar__mark", class: "topbar__mark" do %>
              <i class="fas fa-sign-out-alt"></i>ログアウトする
            <% end %>
      <% else %>
          <%= link_to image_tag("toplogo-white.png", class: "toplogo pull-left"), "/" %>
          <div class=" btn__topbar__wrap">
                <%= link_to reservations_path, class: "btn__topbar__radius__l topbox reservation__mark" do %>
                    <span>予約する</span>
                <% end %>

              <div class="topbox btn__topbar__radius__r">
                  <span class="text__top__inquiry">お気軽にお問い合いわせください<br>
                  <%= link_to "お問い合わせフォーム", inquiry_path %></span><br>
                  <p  class="btn__top__inquiry">
                  <span class="glyphicon glyphicon-earphone" aria-hidden="true" ></span>
                  電話： XXXX - XX - XXXX</p>
              </div>
        </div>
      <% end %>
    </div>
    </div>
    <%= render "homes/navbar" %>
  </header>

  <body>
      <%= yield %>
  </body>

  <footer>
      <div class="row footer-top">
        <div class="col-md-3 footer-top-box">
          <nav>
            <ul>
              <h2><b>医院のご案内</b></h2>
                <li>− <%= link_to "ごあいさつ", about_path %></li>
                <li>− <%= link_to "当院の特徴", about_path(anchor: "about1") %></li>
                <li>− <%= link_to "医院のご案内", about_path(anchor: "about2") %></li>
              <h2><b>診察のご案内</b></h2>
                <li>− <%= link_to "診察内容", exams_path %></li>
                <li>− <%= link_to "当院の施設・機器", exams_path(anchor: "exam1") %></li>
                <li>− <%= link_to "ご診察の流れ", exams_path(anchor: "exam2") %></li>
           </ul>
        </nav>
      </div>
    <div class="col-md-3 footer-top-box">
          <h2><b><%= link_to "交通案内", access_path %></b></h2>
          <h2><b>会員ページ</b></h2>
            <li>− 会員ページについて</li>
            <li>− <%= link_to "ログインページ", new_patient_session_path %></li>
          <h2><b><%= link_to "お問い合わせ", inquiry_path %></b></h2>
    </div>
    <div class="col-md-3 footer-logo-box">
      <%= image_tag "toplogo-white.png", class: "footer-logo" %>
      <h3><b>XXXX - XX - XXXX</b></h3>
    </div>
    </div>
    <div class="row">
    <div class="col text-center">
      <b>©︎ Panda Orthopedics Clinic</b>
    </div>
    </div>
  </footer>

<script src="assets/ScrollTrigger.min.js"></script>
<script>
var scrollTrigger = new ScrollTrigger.default({
  once: true,
  offset: {
      element: {
          y: 1.0
      }
  },
});
scrollTrigger.add('[data-scroll]', {
    toggle: {
        class: {
            in: 'visible',
            out: 'invisible'
        }
    }
});
scrollTrigger.add('[data-scroll=fadeIn]', {
    toggle: {
        class: {
            in: 'visible',
            out: 'invisible'
        }
    }
});
</script>
</html>
